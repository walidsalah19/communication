<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/teacher_student_chat_photo1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/card_filled"
            android:src="@drawable/ic_person_black_24dp" />


        <TextView
            android:id="@+id/teacher_student_chat_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/teacher_student_chat_photo1"
            android:fontFamily="@font/harmatta_en"
            android:gravity="start"
            android:textAlignment="textStart"
            android:text="Ather Alamari"
            android:textColor="@color/dialog_text_color"
            android:textSize="22sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/teacher_student_chat_photo1"
            android:background="@color/mainColor"
            android:backgroundTint="@color/mainColor" />
    </RelativeLayout>
</RelativeLayout>